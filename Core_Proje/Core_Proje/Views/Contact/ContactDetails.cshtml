@model EntityLayer.Concrete.Message
@{
    ViewData["Title"] = "ContactDetails";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        @using (Html.BeginForm("ContactDetails", "Contact"))
        {
            <div class="card-body">
                <h4 class="card-title">İletişim Kutusu</h4>
                <form class="forms-sample">
                    <div class="form-group">
                        @Html.HiddenFor(x => x.MessageID, new { @class = "form-control" })
                    </div>
                    <br>
                    <div class="form-group">
                        <label>Gönderen Adı</label>
                        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Mail</label>
                        @Html.TextBoxFor(x => x.Mail, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Tarih</label>
                        @Html.TextBoxFor(x => x.Date, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <label for="exampleTextarea1">Mesaj</label>
                        @Html.TextAreaFor(x => x.Content, 6, 3, new { @class = "form-control" })
                    </div>
                    <a asp-action="Index" class="btn btn-primary m-2">İletişim Sayfası</a>
                </form>
            </div>
        }
    </div>
</div>

